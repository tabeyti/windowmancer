<Controls:MetroWindow x:Class="Windowmancer.UI.WindowHostContainer"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      ShowIconOnTitleBar="True"
                      ShowTitleBar="True"
                      Title="{Binding ContainerLabel}"
                      mc:Ignorable="d"
                      Loaded="WindowHostContainer_OnLoaded"
                      DataContext="{Binding RelativeSource={RelativeSource Self}}">

  <Controls:MetroWindow.Flyouts>
    <Controls:FlyoutsControl x:Name="FlyoutsControl">
      <Controls:Flyout Header="Layout Helper"
                       IsModal="True"
                       Position="Right"
                       CloseButtonVisibility="Collapsed"
                       Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Controls:MetroWindow}, Path=ActualWidth}"/>
      <Controls:Flyout Name="ToastFlyout" 
                       IsModal="False"
                       Position="Bottom"                       
                       IsAutoCloseEnabled="True"
                       AutoCloseInterval="3000"
                       TitleVisibility="Collapsed"
                       CloseButtonVisibility="Collapsed"
                       BorderBrush="Yellow"
                       BorderThickness="1"
                       Height ="75">
        <TextBlock Name="MessageToastTextBlock" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="10"
                   FontSize="16">
          <Run Name="ToastMessage" Foreground="Yellow"/>
        </TextBlock>
      </Controls:Flyout>
    </Controls:FlyoutsControl>
  </Controls:MetroWindow.Flyouts>

  <Controls:MetroWindow.RightWindowCommands>
    <Controls:WindowCommands>
      <Button Name="EditButton" 
              Click="EditButton_OnClick"
              Content="Edit Layout"
              ToolTip="Open the Display Helper Control" />
    </Controls:WindowCommands>
  </Controls:MetroWindow.RightWindowCommands>
  <Grid/>
</Controls:MetroWindow>

